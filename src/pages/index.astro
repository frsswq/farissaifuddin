---
import BgPattern from "../components/bg-pattern.astro";
import LinkContainer from "../components/link-container.svelte";
import WindowContainer from "../components/window-container.svelte";
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<WindowContainer client:idle />
	<LinkContainer />
	<BgPattern />
</Layout>

<style>
	main {
		transform: translateZ(0);
		-webkit-transform: translateZ(0);
		backface-visibility: hidden;
		-webkit-backface-visibility: hidden;
	}

	main > * {
		transform: translate3d(0, 0, 0);
		will-change: transform;
	}

	body {
		overflow: hidden;
		position: fixed;
	}
</style>
